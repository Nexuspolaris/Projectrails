<div id="product_list">
  <h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Decimal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd','list_line_even') %>">
        <td><%= image_tag(product.image_url, :class => 'list_image') %></td>
        <td><dl><dt><%= product.titre %></dt><dd><%= truncate(strip_tags(product.description), :length => 80) %></dd></dl></td>
        <td><%= product.image_url %></td>
        <td><%= product.price %></td>
        <td><%= product.decimal %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Etes-vous sure ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
