<table>
  <thead>
    <tr>
      <th>Libelle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @convention.each do |convention| %>
      <tr class="<%= cycle('list_line_odd','list_line_even') %>">
        <td><%= convention.libelle %></td>
        <td><%= link_to 'Show', convention %></td>
        <td><%= link_to 'Edit', edit_convention_path(convention) %></td>
        <td><%= link_to 'Destroy', convention, method: :delete, data: { confirm: 'Etes-vous sure ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>